<section
  id="hero"
  class="h-screen flex items-center justify-center mx-auto px-4 md:px-16 transition-colors duration-300"
>
  <div
    class="w-full max-w-4xl flex flex-col gap-6 md:gap-8 items-center text-center"
  >
    <div class="flex flex-col md:flex-row gap-4 md:gap-8 items-center w-full">
      <img
        src="/wilfred.jpg"
        alt="Artistic inspiration"
        class="hero-avatar w-32 h-32 md:w-40 md:h-40 rounded-full object-cover"
      />
      <h1 class="hero-title text-center text-2xl md:text-5xl md:text-left w-full">
        Hola, mi nombre es Wilfredo!
      </h1>
    </div>
    <p class="hero-description w-full text-justify text-base md:text-lg">
      Bienvenidos a mi sitio web. Aquí encontrarás una colección de mis obras de arte
    y proyectos personales. 
    </p>
    <div class="hero-gallery flex gap-4">
      <img
        src="/wilfred-hero.webp"
        alt="Art Void"
        class="hero-image w-75 h-full object-cover"
      />
      <img
        src="/wilfred-hero2.webp"
        alt="Art Void"
        class="hero-image w-75 h-full object-cover"
      />
      <img
        src="/wilfred-hero3.webp"
        alt="Art Void"
        class="hero-image w-89 h-full object-cover"
      />
    </div>
  </div>
</section>

<script>
  import { gsap } from "gsap";

  document.addEventListener("DOMContentLoaded", () => {
    // Set initial states
    gsap.set(".hero-avatar", { opacity: 0, scale: 0.5, rotation: -180 });
    gsap.set(".hero-title", { opacity: 0, x: -50 });
    gsap.set(".hero-description", { opacity: 0, y: 30 });
    gsap.set(".hero-image", { opacity: 0, y: 50, scale: 0.8 });

    // Create timeline for sequential animations
    const tl = gsap.timeline({ defaults: { ease: "power3.out" } });

    // Animate avatar with rotation and scale
    tl.to(".hero-avatar", {
      opacity: 1,
      scale: 1,
      rotation: 0,
      duration: 1,
      ease: "back.out(1.7)",
    })
      // Animate title
      .to(
        ".hero-title",
        {
          opacity: 1,
          x: 0,
          duration: 0.8,
        },
        "-=0.5"
      )
      // Animate description
      .to(
        ".hero-description",
        {
          opacity: 1,
          y: 0,
          duration: 0.8,
        },
        "-=0.4"
      )
      // Animate gallery images with stagger
      .to(
        ".hero-image",
        {
          opacity: 1,
          y: 0,
          scale: 1,
          duration: 0.8,
          stagger: 0.15,
        },
        "-=0.4"
      );

    // Add hover effects to images
    const images = document.querySelectorAll(".hero-image");
    images.forEach((img) => {
      img.addEventListener("mouseenter", () => {
        gsap.to(img, {
          scale: 1.05,
          duration: 0.3,
          ease: "power2.out",
        });
      });

      img.addEventListener("mouseleave", () => {
        gsap.to(img, {
          scale: 1,
          duration: 0.3,
          ease: "power2.out",
        });
      });
    });

    // Add hover effect to avatar
    const avatar = document.querySelector(".hero-avatar");
    if (avatar) {
      avatar.addEventListener("mouseenter", () => {
        gsap.to(avatar, {
          rotation: 360,
          duration: 0.6,
          ease: "power2.inOut",
        });
      });
    }
  });
</script>
