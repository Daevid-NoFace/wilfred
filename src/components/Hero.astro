---
// In dev mode, don't use base URL; in production, use it
const baseUrl = import.meta.env.DEV ? '' : import.meta.env.BASE_URL;
---

<section
  id="hero"
  class="min-h-100 flex items-center justify-center py-12 md:py-20 transition-colors duration-300"
>
  <div
    class="w-full max-w-5xl flex flex-col gap-8 md:gap-12 items-center px-4 sm:px-6"
  >
    <!-- Avatar y Título -->
    <div class="flex flex-col md:flex-row gap-6 md:gap-10 items-center justify-center w-full">
      <img
        src={`${baseUrl}/wilfred.jpg`}
        alt="Wilfredo"
        class="hero-avatar w-28 h-28 sm:w-36 sm:h-36 md:w-44 md:h-44 lg:w-48 lg:h-48 rounded-full object-cover shadow-lg shrink-0"
      />
      <h1 class="hero-title text-center md:text-left text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold leading-tight max-w-2xl">
        Hola, mi nombre es Wilfredo!
      </h1>
    </div>

    <!-- Descripción -->
    <p class="hero-description text-center text-base sm:text-lg md:text-xl leading-relaxed max-w-5xl px-2">
      Bienvenidos a mi sitio web. Aquí encontrarás una colección de mis obras de arte
      y proyectos personales.
    </p>

    <!-- Galería -->
    <div class="hero-gallery w-full grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4 md:gap-6 max-w-4xl">
      <img
        src={`${baseUrl}/wilfred-hero.webp`}
        alt="Art Void"
        data-index="0"
        class="hero-image w-full h-48 sm:h-56 md:h-64 object-cover rounded-lg shadow-md cursor-pointer hover:opacity-90 transition-opacity"
      />
      <img
        src={`${baseUrl}/wilfred-hero2.webp`}
        alt="Art Void"
        data-index="1"
        class="hero-image w-full h-48 sm:h-56 md:h-64 object-cover rounded-lg shadow-md cursor-pointer hover:opacity-90 transition-opacity sm:col-span-2 md:col-span-1"
      />
      <img
        src={`${baseUrl}/wilfred-hero3.webp`}
        alt="Art Void"
        data-index="2"
        class="hero-image w-full h-48 sm:h-56 md:h-64 object-cover rounded-lg shadow-md cursor-pointer hover:opacity-90 transition-opacity"
      />
    </div>
  </div>
</section>

<!-- Lightbox Modal -->
<div id="lightbox" class="fixed inset-0 bg-black bg-opacity-95 z-50 hidden items-center justify-center">
  <button id="lightbox-close" class="absolute top-4 right-4 text-white text-4xl font-bold hover:text-gray-300 transition-colors z-10 w-12 h-12 flex items-center justify-center">
    &times;
  </button>
  
  <button id="lightbox-prev" class="absolute left-4 top-1/2 -translate-y-1/2 text-white text-5xl font-bold hover:text-gray-300 transition-colors z-10 w-16 h-16 flex items-center justify-center">
    ‹
  </button>
  
  <button id="lightbox-next" class="absolute right-4 top-1/2 -translate-y-1/2 text-white text-5xl font-bold hover:text-gray-300 transition-colors z-10 w-16 h-16 flex items-center justify-center">
    ›
  </button>
  
  <div class="relative max-w-7xl max-h-[90vh] w-full h-full flex items-center justify-center p-4">
    <img id="lightbox-image" src="" alt="" class="max-w-full max-h-full object-contain rounded-lg shadow-2xl">
  </div>
  
  <div id="lightbox-counter" class="absolute bottom-4 left-1/2 -translate-x-1/2 text-white text-lg font-medium">
    <span id="current-index">1</span> / <span id="total-images">3</span>
  </div>
</div>

<script>
  import { gsap } from "gsap";

  document.addEventListener("DOMContentLoaded", () => {
    // Set initial states
    gsap.set(".hero-avatar", { opacity: 0, scale: 0.5, rotation: -180 });
    gsap.set(".hero-title", { opacity: 0, x: -50 });
    gsap.set(".hero-description", { opacity: 0, y: 30 });
    gsap.set(".hero-image", { opacity: 0, y: 50, scale: 0.8 });

    // Create timeline for sequential entry animations
    const tl = gsap.timeline({ defaults: { ease: "power3.out" } });

    // Animate avatar with rotation and scale
    tl.to(".hero-avatar", {
      opacity: 1,
      scale: 1,
      rotation: 0,
      duration: 1,
      ease: "back.out(1.7)",
    })
      // Animate title
      .to(
        ".hero-title",
        {
          opacity: 1,
          x: 0,
          duration: 0.8,
        },
        "-=0.5"
      )
      // Animate description
      .to(
        ".hero-description",
        {
          opacity: 1,
          y: 0,
          duration: 0.8,
        },
        "-=0.4"
      )
      // Animate gallery images with stagger
      .to(
        ".hero-image",
        {
          opacity: 1,
          y: 0,
          scale: 1,
          duration: 0.8,
          stagger: 0.15,
        },
        "-=0.4"
      );

    // Continuous floating animation for avatar
    tl.add(() => {
      gsap.to(".hero-avatar", {
        y: -15,
        duration: 2,
        ease: "sine.inOut",
        repeat: -1,
        yoyo: true,
      });
    });

    // Continuous subtle scale pulse for title
    gsap.to(".hero-title", {
      scale: 1.02,
      duration: 3,
      ease: "sine.inOut",
      repeat: -1,
      yoyo: true,
      delay: 1.5,
    });

    // Continuous gentle sway for description
    gsap.to(".hero-description", {
      x: 5,
      duration: 4,
      ease: "sine.inOut",
      repeat: -1,
      yoyo: true,
      delay: 2,
    });

    // Continuous floating animations for gallery images with different timings
    const galleryImages = Array.from(document.querySelectorAll<HTMLImageElement>(".hero-image"));
    galleryImages.forEach((img, index: number) => {
      gsap.to(img, {
        y: -10 - index * 3,
        rotation: (index % 2 === 0 ? 2 : -2),
        duration: 2.5 + index * 0.5,
        ease: "sine.inOut",
        repeat: -1,
        yoyo: true,
        delay: 2 + index * 0.3,
      });

      // Add hover effects to images
      img.addEventListener("mouseenter", () => {
        gsap.to(img, {
          scale: 1.1,
          rotation: 0,
          duration: 0.3,
          ease: "power2.out",
        });
      });

      img.addEventListener("mouseleave", () => {
        gsap.to(img, {
          scale: 1,
          rotation: (index % 2 === 0 ? 2 : -2),
          duration: 0.3,
          ease: "power2.out",
        });
      });
    });

    // Enhanced hover effect for avatar with continuous rotation
    const avatar = document.querySelector(".hero-avatar");
    if (avatar) {
      let isHovering = false;
      
      avatar.addEventListener("mouseenter", () => {
        isHovering = true;
        gsap.to(avatar, {
          scale: 1.1,
          rotation: "+=360",
          duration: 0.8,
          ease: "power2.inOut",
        });
      });

      avatar.addEventListener("mouseleave", () => {
        isHovering = false;
        gsap.to(avatar, {
          scale: 1,
          duration: 0.3,
          ease: "power2.out",
        });
      });
    }

    // Lightbox functionality
    const lightbox = document.getElementById("lightbox");
    const lightboxImage = document.getElementById("lightbox-image") as HTMLImageElement;
    const lightboxClose = document.getElementById("lightbox-close");
    const lightboxPrev = document.getElementById("lightbox-prev");
    const lightboxNext = document.getElementById("lightbox-next");
    const currentIndexSpan = document.getElementById("current-index");
    const totalImagesSpan = document.getElementById("total-images");
    
    let currentImageIndex = 0;

    // Update total images count
    if (totalImagesSpan) {
      totalImagesSpan.textContent = galleryImages.length.toString();
    }

    function openLightbox(index: number) {
      currentImageIndex = index;
      const img = galleryImages[index];
      
      if (lightboxImage && img) {
        lightboxImage.src = img.src;
        lightboxImage.alt = img.alt;
      }
      
      if (currentIndexSpan) {
        currentIndexSpan.textContent = (index + 1).toString();
      }
      
      if (lightbox) {
        lightbox.classList.remove("hidden");
        lightbox.classList.add("flex");
        document.body.style.overflow = "hidden";
        
        // Animate lightbox entrance
        gsap.fromTo(lightbox, 
          { opacity: 0 },
          { opacity: 1, duration: 0.3, ease: "power2.out" }
        );
        
        gsap.fromTo(lightboxImage,
          { scale: 0.8, opacity: 0 },
          { scale: 1, opacity: 1, duration: 0.4, ease: "back.out(1.2)" }
        );
      }
    }

    function closeLightbox() {
      if (lightbox) {
        gsap.to(lightbox, {
          opacity: 0,
          duration: 0.2,
          ease: "power2.in",
          onComplete: () => {
            lightbox.classList.add("hidden");
            lightbox.classList.remove("flex");
            document.body.style.overflow = "";
          }
        });
      }
    }

    function showImage(index: number) {
      if (index < 0) {
        currentImageIndex = galleryImages.length - 1;
      } else if (index >= galleryImages.length) {
        currentImageIndex = 0;
      } else {
        currentImageIndex = index;
      }
      
      const img = galleryImages[currentImageIndex];
      
      if (lightboxImage && img) {
        // Animate image transition
        gsap.to(lightboxImage, {
          opacity: 0,
          scale: 0.9,
          duration: 0.2,
          ease: "power2.in",
          onComplete: () => {
            lightboxImage.src = img.src;
            lightboxImage.alt = img.alt;
            
            gsap.to(lightboxImage, {
              opacity: 1,
              scale: 1,
              duration: 0.3,
              ease: "back.out(1.2)"
            });
          }
        });
      }
      
      if (currentIndexSpan) {
        currentIndexSpan.textContent = (currentImageIndex + 1).toString();
      }
    }

    function nextImage() {
      showImage(currentImageIndex + 1);
    }

    function prevImage() {
      showImage(currentImageIndex - 1);
    }

    // Event listeners for gallery images
    galleryImages.forEach((img, index: number) => {
      img.addEventListener("click", () => {
        openLightbox(index);
      });
    });

    // Event listeners for lightbox controls
    if (lightboxClose) {
      lightboxClose.addEventListener("click", closeLightbox);
    }

    if (lightboxPrev) {
      lightboxPrev.addEventListener("click", prevImage);
    }

    if (lightboxNext) {
      lightboxNext.addEventListener("click", nextImage);
    }

    // Close lightbox when clicking on background
    if (lightbox) {
      lightbox.addEventListener("click", (e) => {
        if (e.target === lightbox) {
          closeLightbox();
        }
      });
    }

    // Keyboard navigation
    document.addEventListener("keydown", (e) => {
      if (!lightbox || lightbox.classList.contains("hidden")) return;
      
      switch(e.key) {
        case "Escape":
          closeLightbox();
          break;
        case "ArrowLeft":
          prevImage();
          break;
        case "ArrowRight":
          nextImage();
          break;
      }
    });
  });
</script>
